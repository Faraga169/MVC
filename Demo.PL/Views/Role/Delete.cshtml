@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4 text-center">Delete Role</h1>
    <form  asp-action="ConfirmDelete" asp-route-id="@Model.Id" class="col-8" method="post">
        <div class="form-group mb-2">
            <label class="form-label" for="Id">Id</label>
            <input id="Id" name="Id" type="text" value="@Model.Id" class="form-control" readonly />
        </div>
        <div class="form-group mb-2">
            <label class="form-label" for="Name">Name</label>
            <input id="Name" name="Name" value="@Model.Name" type="text" class="form-control" readonly />
        </div>
        <div class="mt-4 m-auto">
           <input type="submit"  value="Delete" class="btn btn-danger" />
            <a  asp-action="Index" class="btn btn-outline-dark">Back to List</a>
        </div>
    </form>
    </div>


