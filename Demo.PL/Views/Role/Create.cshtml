@model RoleViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4 text-center">Create Role</h1>
    <form  asp-action="Create" class="col-8" method="post">
        <div asp-validation-summary="All">
        </div>

        <div class="form-group mb-2">
            <label class="form-label" for="Name">Name</label>
            <input id="Name" name="Name" type="text" class="form-control" />
        </div>
        <div class="mt-4 m-auto">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
        </div>

    </form>
</div>