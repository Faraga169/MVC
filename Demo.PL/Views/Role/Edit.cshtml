@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4 text-center">Update Role</h1>
    <form asp-action="Edit" class="col-8" method="post">
        <div asp-validation-summary="All">
        </div>

        <div class="form-group mb-2">
            <label class="form-label" for="Id">Id</label>
            <input id="Id" name="Id" value="@Model.Id" type="text" class="form-control" readonly  />
        </div>

        <div class="form-group mb-2">
            <label class="form-label" for="Name">Name</label>
            <input id="Name" name="Name" value="@Model.Name" type="text" class="form-control" />
        </div>

        <h3>Assign Users To Roles</h3>

        <div class="form-group">
            @for (int i = 0; i < Model.Users.Count(); i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="Users[i].UserId"/>
                    <input type="hidden" asp-for="Users[i].UserName" />
                    <input asp-for="Users[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" >@Model.Users[i].UserName</label>
                </div>
            
            }

        </div>


        <div class="mt-4 m-auto">
           <input   type="submit" class="btn btn-secondary"  value="Save Update" />
            <a  asp-action="Index" class="btn btn-outline-dark">Back to List</a>
        </div>

    </form>
</div>

