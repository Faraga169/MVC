@model DepartmentDetailsToReturnDto
@{
    ViewData["Title"] = "Delete";
}

<div class=" row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4 text-center">Delete Department</h1>
    <form asp-controller="Department" asp-route-id="@Model.Id" asp-action="Delete"  class="col-8">

        <div class="form-group mb-2">
            <label class="form-label" for="Code">Code</label>
            <input id="Code" name="Code" type="text" class="form-control" readonly value="@Model.Code" />
        </div>

        <div class="form-group mb-2">
            <label class="form-label" for="Name">Name</label>
            <input id="Name" name="Name" type="text" class="form-control" readonly value="@Model.Name" />
        </div>

        <div class="form-group mb-2">
            <label class="form-label" for="CreationDate">CreationDate</label>
            <input id="CreationDate" name="CreationDate" type="date" class="form-control" readonly value="@Model.CreationDate" />
        </div>

        <div class="mt-4 m-auto">
            <input type="submit" class="btn btn-danger" value="Delete">
            <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark">Back to List</a>
        </div>
    </form>
</div>

