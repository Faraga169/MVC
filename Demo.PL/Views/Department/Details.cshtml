@model DepartmentDetailsToReturnDto
 @{  
      ViewData["Title"] = "Details";  
 } 

<div class=" row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4 text-center">Create Department</h1>
    <form asp-controller="Department" asp-action="Details" class="col-8" method="post">
       
        <div class="form-group mb-2">
            <label class="form-label" for="Code">Code</label>
            <input id="Code" name="Code" type="text" class="form-control" value="@Model.Code" disabled />
        </div>

        <div class="form-group mb-2">
            <label class="form-label" for="Name">Name</label>
            <input id="Name" name="Name" type="text" class="form-control" value="@Model.Name" disabled />
        </div>

        <div class="form-group mb-2">
            <label class="form-label" for="CreationDate">CreationDate</label>
            <input id="CreationDate" name="CreationDate" type="date" class="form-control" value="@Model.CreationDate" disabled />
        </div>

        <div class="mt-4 m-auto">
            <input type="submit" class="btn btn-primary" value="Edit">
            <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark">Back to List</a>
        </div>
    </form>
</div>

