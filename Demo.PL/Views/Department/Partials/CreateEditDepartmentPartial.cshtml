<form asp-controller="Department" asp-action= "@ViewBag.Action" class="col-8" method="post">
    <div asp-validation-summary="All">
    </div>
    @if (ViewBag.Action == "Create")
    {
        <div class="form-group mb-2">
            <label class="form-label" for="Code">Code</label>
            <input id="Code" name="Code" type="text" class="form-control" />

            <span class="text-danger" asp-validation-for="Code"> </span>
        </div>

        <div class="form-group mb-2">
            <label class="form-label" for="Name">Name</label>
            <input id="Name" name="Name" type="text" class="form-control" />

            <span class="text-danger" asp-validation-for="Name"> </span>
        </div>

        <div class="form-group mb-2">
            <label class="form-label" for="Description">Description</label>

            <textarea id="Description" name="Description" type="text" class="form-control"></textarea>

        </div>

        <div class="form-group mb-2">
            <label class="form-label" for="CreationDate">CreationDate</label>
            <input id="CreationDate" name="CreationDate" type="date" class="form-control" />

        </div>

        <div class="mt-4 m-auto">
            <input type="submit" class="btn btn-primary" value="Save">
            <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark">Back to List</a>
        </div>
    }
    else
    {
        <div class="form-group mb-2">
            <label class="form-label" for="Code">Code</label>
            <input id="Code" name="Code" type="text" class="form-control" value="@Model.Code" />

            <span class="text-danger" asp-validation-for="Code"> </span>
        </div>

        <div class="form-group mb-2">
            <label class="form-label" for="Name">Name</label>
            <input id="Name" name="Name" type="text" class="form-control" value="@Model.Name" />

            <span class="text-danger" asp-validation-for="Name"> </span>
        </div>

        <div class="form-group mb-2">
            <label class="form-label" for="Description">Description</label>

            <textarea id="Description" name="Description"  class="form-control"> @Model.Description</textarea>

        </div>

        <div class="form-group mb-2">
            <label class="form-label" for="CreationDate">CreationDate</label>
            <input id="CreationDate" name="CreationDate"  value="@Model.CreationDate" class="form-control" />

        </div>

        <div class="mt-4 m-auto">
            <input type="submit" class="btn btn-success" value="Edit" />
            <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark">Back to List</a>
        </div>
    }

</form>