@model LoginViewModel
@{
    ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Login</h1>
<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="mb-2 text-danger"></div>

<form asp-action="Login" method="post">
	<input class="text-light email" asp-for="Email" placeholder="Enter your Email">
	<span class="text-danger" asp-validation-for="Email"></span>
	<br />
	<input class="text-light" asp-for="Password" placeholder="Enter Your Password">
	<span class="text-danger" asp-validation-for="Password"></span>
	<br />
	<div class="wthree-text">
		<label class="anim">
					<input asp-for="RememberMe" class="checkbox">
			<span>Remember Me</span>
		</label>
		<div class="clear"> </div>
	</div>
	<input type="submit" value="SIGNIn">

</form>
<p>Do not have an Account? <a asp-action="Register"> Register Now!</a></p>
<p>Forget Your Password? <a asp-action="ForgetPassword"> Reset Your password</a></p>
	</div>
</div>
@section ValidationScripts {
	<partial name="_ValidationScriptsPartial" />
}

